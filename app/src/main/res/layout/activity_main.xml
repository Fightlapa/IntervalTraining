<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/mainView"
    tools:context="jablonskijakub.intervaltraining.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/backg"
        android:src="@drawable/runner"
        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/transparent_text_height"
        android:layout_marginTop="@dimen/first_row_margin_top"
        android:layout_marginLeft="@dimen/transparent_text_margin"
        android:layout_marginRight="@dimen/transparent_text_margin"
        android:id="@+id/imageView1"
        android:src="@drawable/textbg280"
        android:scaleType="fitXY"
        android:alpha="0.5" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/transparent_text_height"
        android:layout_marginTop="@dimen/third_row_margin_top"
        android:layout_marginLeft="@dimen/transparent_text_margin"
        android:layout_marginRight="@dimen/transparent_text_margin"
        android:id="@+id/imageView"
        android:src="@drawable/textbg280"
        android:scaleType="fitXY"
        android:alpha="0.5" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/transparent_text_height"
        android:id="@+id/imageView2"
        android:layout_marginTop="@dimen/second_row_margin_top"
        android:layout_marginLeft="@dimen/transparent_text_margin"
        android:layout_marginRight="@dimen/transparent_text_margin"
        android:src="@drawable/textbg280"
        android:scaleType="fitXY"
        android:alpha="0.5" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/transparent_text_height"
        android:id="@+id/imageView3"
        android:layout_marginTop="@dimen/fourth_row_margin_top"
        android:layout_marginLeft="@dimen/transparent_text_margin"
        android:layout_marginRight="@dimen/transparent_text_margin"
        android:src="@drawable/textbg280"
        android:scaleType="fitXY"
        android:alpha="0.5" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/transparent_text_height"
        android:id="@+id/imageView4"
        android:layout_marginTop="@dimen/fifth_row_margin_top"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:src="@drawable/textbg180"
        android:scaleType="fitXY"
        android:alpha="0.5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cool down"
        android:id="@+id/coolDownText"
        android:textSize="@dimen/transparent_text_size"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Warm up"
        android:textSize="@dimen/transparent_text_size"
        android:id="@+id/warmUpText"
        android:layout_alignTop="@+id/imageView1"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignStart="@+id/imageView1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Work"
        android:id="@+id/workText"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/transparent_text_size"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rest"
        android:id="@+id/restText"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/transparent_text_size"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start!"
        android:id="@+id/button"
        android:onClick="buttonOnClick"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="150dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rounds"
        android:id="@+id/roundsText"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/transparent_text_size"
        />

    <NumberPicker
        android:layout_width="@dimen/number_picker_size"
        android:layout_height="@dimen/number_picker_size"
        android:id="@+id/warmUpMinutes"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toLeftOf="@+id/warmUpSeconds"
        android:layout_toStartOf="@+id/warmUpSeconds"
        android:layout_marginRight="10dp"
        android:accessibilityLiveRegion="none" />

    <NumberPicker
        android:id="@+id/warmUpSeconds"
        android:layout_width="@dimen/number_picker_size"
        android:layout_height="@dimen/number_picker_size"
        android:layout_alignTop="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_alignEnd="@+id/imageView1"
        android:layout_marginRight="20dp"
        />
    <NumberPicker
        android:layout_width="@dimen/number_picker_size"
        android:layout_height="@dimen/number_picker_size"
        android:id="@+id/workMinutes"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toLeftOf="@+id/workSeconds"
        android:layout_toStartOf="@+id/workSeconds"
        android:layout_marginRight="10dp"
        />

    <NumberPicker
        android:layout_width="@dimen/number_picker_size"
        android:layout_height="@dimen/number_picker_size"
        android:id="@+id/workSeconds"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_marginRight="20dp"
        />
    <NumberPicker
        android:id="@+id/restMinutes"
        android:layout_width="@dimen/number_picker_size"
        android:layout_height="@dimen/number_picker_size"
        android:layout_alignTop="@+id/imageView"
        android:layout_toLeftOf="@+id/restSeconds"
        android:layout_toStartOf="@+id/restSeconds"
        android:layout_marginRight="10dp"
        />

    <NumberPicker
        android:id="@+id/restSeconds"
        android:layout_width="@dimen/number_picker_size"
        android:layout_height="@dimen/number_picker_size"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginRight="20dp"
        />

    <NumberPicker
        android:id="@+id/coolDownMinutes"
        android:layout_width="@dimen/number_picker_size"
        android:layout_height="@dimen/number_picker_size"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toLeftOf="@+id/coolDownSeconds"
        android:layout_toStartOf="@+id/coolDownSeconds"
        android:layout_marginRight="10dp"
        />

    <NumberPicker
        android:id="@+id/coolDownSeconds"
        android:layout_width="@dimen/number_picker_size"
        android:layout_height="@dimen/number_picker_size"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginRight="20dp"
        />
    <NumberPicker
        android:id="@+id/rounds"
        android:layout_width="@dimen/number_picker_size"
        android:layout_height="@dimen/number_picker_size"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignRight="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_marginRight="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/aboutButton"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:onClick="onAbout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Minutes"
        android:id="@+id/minuteText"
        android:layout_above="@+id/warmUpText"
        android:layout_alignLeft="@+id/warmUpMinutes"
        android:layout_alignStart="@+id/warmUpMinutes"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Seconds"
        android:id="@+id/secondsText"
        android:layout_above="@+id/warmUpSeconds"
        android:layout_alignLeft="@+id/warmUpSeconds"
        android:layout_alignStart="@+id/warmUpSeconds"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bg"
        android:layout_centerVertical="true"
        android:src="@drawable/black"
        android:scaleType="fitXY"
        android:alpha="0" />
</RelativeLayout>
